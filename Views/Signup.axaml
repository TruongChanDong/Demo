<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Demo.Views.SignUp"
        Title="SignUp"
        Width="800" Height="600">

	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBlock Text="Sign Up" FontSize="24" Margin="0,0,0,20" HorizontalAlignment="Center"/>
		<TextBox x:Name="Username" Width="200" Watermark="Username" Margin="0,0,0,10"/>
		<TextBox x:Name="Email" Width="200" Watermark="Email" Margin="0,0,0,10"/>
		<TextBox x:Name="Password" Width="200" Watermark="Password" Margin="0,0,0,20" PasswordChar="*"/>
		<Button Content="Sign Up" Width="200" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Click="OnSignUpClick"/>
		<TextBlock x:Name="Message" Foreground="Red" Margin="0,10,0,0" HorizontalAlignment="Center"/>
		<Button Content="Go to Login" Width="200" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Click="OnGoToLoginClick"/>
	</StackPanel>
</Window>
